@model ReporteMensualViewModel

@{
    ViewData["Title"] = "Reporte Mensual";

    int añoAnterior = Model.Año - 1;
    int añoPosterior = Model.Año + 1;

    var resumenMontos = new ResumenMontosViewModel()
    {
        Ingresos = Model.Ingresos,
        Gastos = Model.Gastos,
        Total = Model.Total
    };

    string UppercaseFirst(string str)
    {
        if (string.IsNullOrEmpty(str))
        {
            return string.Empty;
        }
        return char.ToUpper(str[0]) + str.Substring(1).ToLower();
    }
}

<partial name="_Submenu" Model="SubMenuTransacciones.Mensual"></partial>

<h4>Mostrando transacciones de 
    <a asp-route-año="@añoAnterior" class="btn btn-secondary">
        <i class="bi-chevron-left"></i>
    </a>@Model.Año
    <a asp-route-año="@añoPosterior" class="btn btn-secondary">
        <i class="bi-chevron-right"></i>
    </a>
</h4>

<partial name="_ResumenMontos" model="@resumenMontos"></partial>

<table class="table table-striped" style="font-size: 20px">
    <thead>
        <tr class="table-primary">
            <th>Mes</th>
            <th style="text-align: right;">Ingresos</th>
            <th style="text-align: right;">Gastos</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaccionesPorMes in Model.TransaccionesPorMes)
        {
            <tr>
                <td>
                    <a style="text-decoration: none" asp-action="Index"
                        asp-route-año="@Model.Año" asp-route-mes="@transaccionesPorMes.Mes">
                        @UppercaseFirst(@transaccionesPorMes.FechaReferencia.ToString("MMM"))
                    </a>
                </td>
                <td class="activo" style="text-align: right;">@transaccionesPorMes.Ingresos</td>
                <td class="pasivo" style="text-align: right;">@transaccionesPorMes.Gastos</td>
            </tr>
        }
    </tbody>
</table>