@model IEnumerable<IndiceCuentasViewModel>

@{
    ViewData["Title"] = "Cuentas";

    string ObtenerClasePorBalance(decimal balance)
    {
        return balance >= 0 ? "activo" : "pasivo";
    }
}

<h1>Cuentas</h1>

<a asp-action="Crear" class="btn btn-primary">Crear nuevo</a>

<div class="contenedor-totales mb-3">
    <div>
        <div>
            <strong>Activos</strong>
        </div>
        <div class="activo">
            @Model.Where(c => c.Balance > 0).Sum(c => c.Balance).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))
        </div>
    </div>

    <div>
        <div>
            <strong>Pasivos</strong>
        </div>
        <div class="pasivo">
            @Model.Where(c => c.Balance < 0).Sum(c => c.Balance).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))
        </div>
    </div>

    <div>
        <div>
            <strong>Total</strong>
        </div>
        <div class="total">
            @Model.Sum(c => c.Balance).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))
        </div>
    </div>
</div>

<div class="accordion acordeon-cuentas">
    @foreach (var tipoCuenta in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="cabeceraUno">
                @{
                    var id = tipoCuenta.TipoCuenta.Replace(" ", "");
                    // generar un id unico para el boton de colapsar
                    var dataBSTarget = "#" + id;
                    var claseTipoCuenta = ObtenerClasePorBalance(tipoCuenta.Balance);
                }
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="@dataBSTarget">
                    <span class="me-3">
                        <span><strong>@tipoCuenta.TipoCuenta</strong></span>
                        <span class="@claseTipoCuenta">@tipoCuenta.Balance.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))</span>
                    </span>
                </button>
            </h2>

            <div id="@id" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <ul class="list-group">
                        @foreach (var cuenta in tipoCuenta.Cuentas)
                        {
                            var claseCuenta = ObtenerClasePorBalance(cuenta.Balance);
                            <li class="list-group-item">
                                <span>
                                    <a asp-action="Editar" asp-route-id="@cuenta.Id" class="btn btn-primary">
                                        <i class="bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Borrar" asp-route-id="@cuenta.Id" class="btn btn-danger">
                                        <i class="bi-trash-fill"></i>
                                    </a>
                                    <strong class="ps-2">@cuenta.Nombre</strong>
                                </span>
                                <span class="@claseCuenta">@cuenta.Balance.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-MX"))</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
